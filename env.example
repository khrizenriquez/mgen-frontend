# API Configuration
# Local development (includes /api/v1 prefix)
VITE_API_URL=http://localhost:8000/api/v1
# Production (Railway) - uncomment and set your Railway app URL with /api/v1
# VITE_API_URL=https://your-app-name.railway.app/api/v1
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_NAME="Yo Me Uno - Donaciones Guatemala"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Plataforma de donaciones para organizaciones guatemaltecas"

# Environment
VITE_NODE_ENV=development

# Authentication Configuration
VITE_TOKEN_REFRESH_THRESHOLD=300000
VITE_MAX_RETRY_ATTEMPTS=3

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=true

# Contact Information
VITE_SUPPORT_EMAIL=soporte@yomeuno.gt
VITE_SUPPORT_PHONE=+502-1234-5678